{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "allowBranch": "ruut",
      "createRelease": "github"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  }
}